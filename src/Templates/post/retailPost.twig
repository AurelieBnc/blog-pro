{# comments form #}
{% if session.logVisitor is same as false %}
<section class="py-5">
    <div class="container mb-2">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <h2 class="fs-3 mb-5" title="Donner votre avis">Donner votre avis
                </h2>

                <form name="sentComment" id="CommentForm" novalidate>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="floatingInput" placeholder="name" required
