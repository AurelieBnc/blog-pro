{% extends "base.twig" %}

{% block title %} Accueil {% endblock %}

{% block content %}
{# article #}
<section class="py-5">
    <div class="container mt-5 mb-1">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <h2 class="text-center text-capitalize pb-5 mb-5">{{ post.title }}</h2>
                <p class="lead my-5">{{ post.lead }}</p>
                <p>{{ post.content }}</p>
                <p class="blockquote-footer d-flex justify-content-end pt-5">Mise à jour le {{ post.update_date |
                    date("d/m/Y",
                    "Europe/Paris") }}</p>
                {# btn de modération - todo ajouter un hover#}
                {% if session.logUser is same as 'admin' %}
                <div class="d-flex justify-content-end me-2">
                    <div class="p-1 ">
                        <a class=" btn btn-darkblue " href="#!" title="Modifier l'article"><i class="fas fa-edit"></i></a>
                    </div>
                    <div class="p-1 ">
                        <a onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet article ?')"
                        class=" btn btn-darkblue " href="#!" title="Supprimer l'article"><i class="fas fa-trash"></i></a>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>


</section>

