{% extends "base.twig" %}

{% block title %} Accueil {% endblock %}

{% block body %}

{% block content %}

<section class="py-5">
    <div class="container mb-2">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <h2 class="fs-3 mb-5" title="Connexion à votre compte"> Connexion à votre
                    compte
                </h2>
                <form method="post" action="register/logIn" name="login" id="loginForm">

                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="floatingInput1" name="email"
                            placeholder="name@example.com" autocomplete="on" required title="Veuillez renseigner votre email"
                            data-validation-required-message="Merci d'entrer votre adresse email">
                        <label for="floatingInput1">Adresse email</label>
                    </div>

                    <div class="form-floating mb-3 controls">
                        <input type="password" class="form-control" id="floatingInput2" name="password"
                            placeholder="password" required autocomplete="on"
                            data-validation-required-message="Merci d'entrer votre mot de passe"
                            title="Veuillez renseigner un mot de passe" required>
                        <label for="floatingInput2">Mot de passe</label>
                    </div>

                    <br>

                    <div id="success"></div>
                    <div class="form-group text-center d-flex justify-content-between">
                        <button type="submit" class="btn btn-outline-secondary" id="sendLoginButton"
                            title="Envoyer">Envoyer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<div class="d-flex justify-content-center mt-0 mb-3">
    <img src="../public/images/logo/origami.png" class="separation2 logo" alt="separation small">
    <img src="../public/images/logo/origami.png" class="separation logo" alt="separation">
    <img src="../public/images/logo/origami.png" class="separation2 logo" alt="separation small">
</div>
<section>
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <p class="lead text-center">... Ou si vous n'avez pas encore de compte ... </p>
        </div>
    </div>
</section>
{# register form #}
<section class="py-5">
    <div class="container mb-2">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <h2 class="text-center fs-3 mb-5" title="Donner votre avis"> Rejoignez nous !
                </h2>

                <form method="POST" action="register/registerUser" name="register" id="RegisterForm" enctype= "multipart/form-data">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="floatingInput3" name="lastname" placeholder="nom"
                            data-validation-required-message="Merci d'entrer votre nom."
                            title="Veuillez renseigner votre nom" autocomplete="on" required>
                        <p class="help-block text-danger"></p>
                        <label for="floatingInput3">Nom</label>
                    </div>

                    <div class="form-floating mb-3 controls">
                        <input type="text" class="form-control" id="floatingInput4" name="firstname" placeholder="prénom"
                            data-validation-required-message="Merci d'entrer votre prénom."
                            title="Veuillez renseigner votre prénom" autocomplete="on" required>
                        <label for="floatingInput4">Prénom</label>
                    </div>
                    <div class="form-floating mb-3 controls">
                        <input type="text" class="form-control" id="floatingInput5" name="pseudonym" placeholder="pseudonym"
                            data-validation-required-message="Merci d'entrer votre surnom."
                            title="Veuillez renseigner votre surnom" autocomplete="on" required>
                        <label for="floatingInput5">Surnom</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="floatingInput6" name="email"
                            placeholder="name@example.com" autocomplete="on" required title="Veuillez renseigner votre email"
                            data-validation-required-message="Merci d'entrer votre adresse email">
                        <label for="floatingInput6">Adresse email</label>
                    </div>
                    <div class="form-floating mb-3 controls">
                        <input type="password" class="form-control" id="floatingInput7" name="password" placeholder="password"
                            data-validation-required-message="Merci d'entrer votre mot de passe."
                            title="Veuillez renseigner un mot de passe" required>
                        <label for="floatingInput7">Mot de passe</label>
                    </div>
                    {# <div class="form-floating mb-3 controls">
                        <input type="password" class="form-control" id="floatingInput8" name="confirmPassword" placeholder="ConfirmedPassword"
                            required data-validation-required-message="Merci de confirmer votre mot de passe."
                            title="Veuillez confirmer votre mot de passe" required>
                        <label for="floatingInput">Confirmation du mot de passe</label>
                    </div> #}
                    <div class="form-control mb-3 controls">
                        <label class="mb-2" for="avatar">Vous pouvez télécharger un avatar</label>
                        {# <input type="hidden" name="MAX_FILE_SIZE" value="1048576" /> #}
                        <input type="file" class="form-control mb-2" id="avatar" name="avatar" placeholder="avatar"
                            accept="image/png, image/jpeg" title="Vous pouvez télécharger un avatar">
                    </div>
                    <br>

                    <div id="success"></div>
                    <div class="form-group text-center d-flex justify-content-between">
                        <button type="submit" class="btn btn-outline-secondary" id="sendCreatedButton"
                            title="Envoyer">Envoyer</button>
                        <button type="reset" class="btn btn-outline-secondary" id="resetFormButton"
                            title="Réinitialiser">Réinitialiser</button>
                    </div>

                </form>

            </div>
        </div>
    </div>
</section>
{% endblock content %}
{% endblock body %}